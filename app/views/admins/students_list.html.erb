<div class='main'>
<h1>Students<strong>List</strong></h1>
<hr>
<br>
<% @students.each do |student| %>
<%= student.name %> 

<button class="btn-up">
	<% if !student.admin? %>
		<%= link_to 'Upgrade', upgrade_path(student_id: student.id) %>
	<% else %>
		<%= link_to 'Downgrade', upgrade_path(student_id: student.id) %>
	<% end %>
</button>

<br>
<% end %>
</div>
