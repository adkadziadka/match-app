<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
    <%= current_student.has_profile? ? current_student.name : current_student.email  %> <span class="caret"></span></a>

  <ul class="dropdown-menu">

    <% if current_student.has_profile? %>
      <li><%= link_to "Edit Profile", edit_profile_path(current_student.profile) %></li>
    <% else %>
      <li><%= link_to "Create Profile", new_profile_path %></li>
    <% end %>
    <li><%= link_to "Edit Password", edit_student_registration_path %></li>

    <li role="separator" class="divider"></li>
    <li><%= link_to "Log out", destroy_student_session_path, method: :delete %></li>
  </ul>

</li>
